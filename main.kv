            MDFloatLayout:
                pos_hint: {"center_x": .44, "center_y": 0.23}
                size_hint_y: .03
                md_bg_color: rgba(178, 178, 178, 255)

        Button:
            text: "LOGIN"
            size_hint: .5, .065
            pos_hint: {"center_x": .5, "center_y": .34}
            background_color: 0, 0, 0, 0
            font_name: "Roboto"
